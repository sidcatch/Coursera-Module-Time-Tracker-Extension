{
    "manifest_version": 3,
    "name": "Coursera Module Time Tracker",
    "version": "1.0",
    "description": "Shows remaining video and reading time for Coursera modules in the sidebar navigation",
    "permissions": ["storage", "activeTab"],
    "host_permissions": ["*://*.coursera.org/*"],
    "content_scripts": [
        {
            "matches": ["*://*.coursera.org/learn/*/home/module/*"],
            "js": ["content.js"],
            "run_at": "document_end"
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Coursera Module Time Tracker"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
